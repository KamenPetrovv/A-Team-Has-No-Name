@{
    ViewBag.Title = "MyPosts";
}

@model List<ATHNN.Models.Post>

<td>@Html.Partial("ProfileTemplate")</td>


<ul class="profile-content">
    @{
        int counter = 0;
        foreach (var post in Model)
        {
            {
                if (ViewBag.PostExists[counter])
                {
                    <li class="profile-content-cells">
                        <a href="../Posts/Details/@post.Id">
                            <div class="post-preview">
                                <div class="post-preview-background"></div>
                                <div class="post-preview-text">View</div>
                                <img src="@post.Body" alt="Sample Image" />
                            </div>
                        </a>
                    </li>
                }
                else
                {
                    <li class="profile-content-cells">
                        <a href="../Posts/Details/@post.Id">
                            <div class="post-preview">
                                <div class="post-preview-background"></div>
                                <div class="post-preview-text">View</div>
                                <img src="https://az853139.vo.msecnd.net/static/images/not-found.png" alt="Sample Image" width="100%" />
                            </div>
                        </a>
                    </li>
                }
            }
            counter++;
        }
    }
</ul>


